
azul = rgb(39,92,168)
naranjo = #FF5200
fuente = "Open Sans", sans-serif

body
    font-family fuente
    font-size 14px
    font-weight 400
    min-height 100%

div.breadcrumbs
    float right
    height 30px
    width 93%

html
    height 100%

h1
    margin-top 5px

nav
    margin-top 20px

#content
    margin-left 0
    margin-right 0
    margin-top 40px

#content-main
    padding-top 20px

#content-related
    float none
    margin-top 45%
    position inherit
    width 100%

#header
    background-color azul
    border-bottom solid 5px naranjo
    height 60px
    img
        margin-top 10px
        position absolute

.active
    background-color #f5f5f5

.after-icon
    font-size 14px
    padding-left 10px

.content-breadcrumbs
    font-size 12px
    padding 3px 0
    padding-left 5%

.dashboard
    #content
        width 100%

.dataTables_filter
    input
        margin-left 20px

.dataTables_length
    display inline-block
    float right
    select
      margin-left 15px
      margin-right 15px

.dataTables_paginate
    .current
        margin 0 10px

.fa
    font-size 14px

.notifications
    position absolute
    top 90px
    right 0px
    z-index 9999

.tab-content
    padding 15px
    .active
        background none

.user-pull
    color #5B80B2
    i
        margin-left 7px
        margin-right 2px

    #user-name
        font-family fuente
        margin-right 10px

.vertical-divider
    border-left 1px solid #F2F2F2
    border-right 1px solid #FFF