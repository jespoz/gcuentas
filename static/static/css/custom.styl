@import 'nib/vendor'
@import 'nib/gradients'

vendor-prefixes = o ms moz webkit official

azul = rgb(39,92,168)
naranjo = #FF5200
fuente = "Open Sans", sans-serif

body
    font-family fuente
    font-weight 400

div.breadcrumbs
    float right
    height 30px
    width 93%

#content
    margin-top 40px

#header
    background-color azul
    border-bottom solid 5px naranjo
    height 60px

    img
        margin-top 10px
        position absolute

.content-breadcrumbs
    font-size 12px
    padding 3px 0
    padding-left 5%

.user-pull
    color #5B80B2
    i
        margin-left 7px
        margin-right 2px

    #user-name
        font-family fuente
        margin-right 10px

.vertical-divider
    border-left 1px solid #F2F2F2
    border-right 1px solid #FFF